@model Services.Models.Role
@{
    ViewBag.Title = "Tạo mới vai trò";
}


@section currentNavBar{
    <li>
        <a href="/Role" class="active">Vai trò</a>
    </li>
    <li>
        <a href="#" class="active">Tạo mới</a>
    </li>
}

<div class="container-fluid container-fixed-lg">
    <div class="row">
        <div class="col-md-offset-2 col-lg-8 col-md-6">
            <div class="panel panel-transparent">
                <div class="panel-body">
                    <form id="form-role-create" role="form" action="/Role/Create" method="post" >
                        <div class="row clearfix">
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <input type="hidden" name="Result" id="Result" value="@ViewBag.Result" />
                            <div class="col-sm-6" style="padding-right:0;padding-left:0;">
                                <div class="form-group form-group-default">
                                    <label>Tên vai trò</label>
                                    <input type="text" class="form-control" name="Name" id="Name" autofocus>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group form-group-default">
                                    <label>Mô tả</label>
                                    <textarea type="text" class="form-control" name="Description" id="Description"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row clearfix">
                            <div class="col-sm-6">
                                <div class="form-group form-group-default">
                                    <label>Trạng thái</label>
                                    @Html.CheckBoxFor(m=>m.Status)
                                </div>
                            </div>
                        </div>
                        
                        <div class="clearfix"></div>
                        <button class="btn btn-primary" type="submit">Save</button>
                        <a class="btn btn-default" href="/Role">Back To List</a>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>