@model Services.Models.Role
@{
    ViewBag.Title = "Cập nhật vai trò";
}


@section currentNavBar{
    <li>
        <a href="/Role" class="active">Vai trò</a>
    </li>
    <li>
        <a href="#" class="active">Cập nhật</a>
    </li>
}

<div class="container-fluid container-fixed-lg">
    <div class="row">
        <div class="col-md-offset-2 col-lg-8 col-md-6">
            <div class="panel panel-transparent">
                <div class="panel-body">
                    <form id="form-role-update" role="form" action="/Role/Edit" method="post">
                        <div class="row clearfix">
                            @Html.ValidationSummary("", new { @class="text-danger" })
                            @Html.HiddenFor(m => m.Id)
                            <div class="col-sm-6" style="padding-left:0;padding-right:0;">
                                <div class="form-group form-group-default">
                                    <label>Tên vai trò</label>
                                    @Html.TextBoxFor(m=>m.Name,new { @class= "form-control", @autofocus = "autofocus" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group form-group-default">
                                    <label>Mô tả</label>
                                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row clearfix">
                            <div class="col-sm-6">
                                <div class="form-group form-group-default">
                                    <label>Trạng thái</label>
                                    @Html.CheckBoxFor(m => m.Status)
                                </div>
                            </div>
                        </div>

                        <div class="clearfix"></div>
                        <button class="btn btn-primary" type="submit">Lưu</button>
                        <a class="btn btn-default" href="/Role">Quay lại</a>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
<input type="hidden" name="Result" id="Result" value="@ViewBag.Result" />